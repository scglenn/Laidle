{
  "manifest_version": 2,
  "name": "Laidle",
  "version": "1.0",

  "background": {
    "scripts": ["src/scripts/background.js"],
    "persistent": false
  },
  "browser_action": {   
    "default_popup": "src/views/popup.html",
    "default_icons": {
      "16": "resources/icon16.png",
      "48": "resources/icon48.png",
     "128": "resources/icon128.png"
    } 
  },

  "content_scripts": [
    {
      "js": ["src/scripts/content.js"],
      "matches": ["*://*/*"]
    }
  ],

  "description": "Laidle is a Chrome extension that generates a comprehensive grocery list from recipes collected in browser! Artificial intelligence is used to parse the ingredients of each recipe into a clean list that is easy to shop with!",
  "icons": {
    "16": "resources/icon16.png",
    "48": "resources/icon48.png",
   "128": "resources/icon128.png"
  },

  "homepage_url": "https://github.com/mn6/narwhal",
  "permissions": [
    "*://*/*",
    "activeTab",
    "storage",
    "declarativeContent",
    "clipboardWrite"
  ],
  "options_page": "src/views/options.html",
  "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com https://code.jquery.com https://cdn.jsdelivr.net; object-src 'self'"
}
